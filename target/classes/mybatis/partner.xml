<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="partner">
	<sql id="search">
		<where>
			<if test="search == 1">
				code LIKE CONCAT(CONCAT('%', #{keyword}), '%')
			</if>
			
			<if test="search == 2">
				name LIKE CONCAT(CONCAT('%', #{keyword}), '%')
			</if>
			
			<if test="search == 3">
				address LIKE CONCAT(CONCAT('%', #{keyword}), '%')
			</if>
			
			<if test="search == 4">
				tel LIKE CONCAT(CONCAT('%', #{keyword}), '%')
			</if>
		</where>
	</sql>

	<select id="total" resultType="Integer">
		SELECT COUNT(code)
		FROM partner
		<include refid="search"></include>
	</select>	
	
	<select id="list" resultType="Partner">
		SELECT *
		FROM partner
		<include refid="search"></include>
		
		<choose>
			<when test="orderMode == 1">
				ORDER BY ${order} ASC
			</when>
			<when test="orderMode == 2">
				ORDER BY ${order} DESC
			</when>
			<otherwise>
				ORDER BY code DESC
			</otherwise>
		</choose>
		
		LIMIT #{offset}, #{perPage}
	</select>
	
	<select id="item" resultType="Partner">
		SELECT *
		FROM partner
		WHERE code=#{code}
	</select>
	
	<insert id="add">
		INSERT INTO partner
		VALUES (NULL, #{name}, #{address}, #{tel})
		<selectKey keyProperty="code" resultType="Integer" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>
	
	<update id="update">
		UPDATE partner
		SET name=#{name}, address=#{address}, tel=#{tel}
		WHERE code=#{code}
	</update>
	
	<delete id="delete">
		DELETE FROM partner
		WHERE code=#{code}
	</delete>
</mapper>