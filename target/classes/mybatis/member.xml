<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">

	<sql id="search">
		<where>
			<if test="search == 1">
				id LIKE CONCAT(CONCAT('%', #{keyword}), '%')
			</if>
			
			<if test="search == 2">
				address LIKE CONCAT(CONCAT('%', #{keyword}), '%')
			</if>
			
			<if test="search == 3">
				tel LIKE CONCAT(CONCAT('%', #{keyword}), '%')
			</if>
		</where>
	</sql>

	<select id="total" resultType="Integer">
		SELECT COUNT(id)
		FROM member
		<include refid="search"></include>
	</select>	
	
	<select id="list" resultType="Member">
		SELECT *
		FROM member
		<include refid="search"></include>
		LIMIT #{offset}, #{perPage}
	</select>
	
	<select id="item" resultType="Member">
		SELECT *
		FROM member
		WHERE id=#{id}
	</select>
	
	<insert id="add">
		INSERT INTO member
		VALUES (#{id}, PASSWORD(#{passwd}), #{address}, #{tel})
	</insert>
	
	<update id="update">
		UPDATE member
		SET address=#{address}, tel=#{tel}
		WHERE id=#{id}
	</update>
	
	<delete id="delete">
		DELETE FROM member
		WHERE id=#{id}
	</delete>
	
	<select id="login" resultType="Member">
		SELECT * FROM member
		WHERE id=#{id} AND passwd=PASSWORD(#{passwd})
	</select>
	
	<select id="check_id" resultType="Integer">
		SELECT COUNT(id) FROM member
		WHERE id=#{id}
	</select>
</mapper>